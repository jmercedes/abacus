%h1 Solicitudes
%hr

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Monto
      %th Estatus
      %th Tiempo
      %th Tasa
      %th Fecha
      %th       

  %tbody
    - @requests.each do |request|
      %tr
        %td= number_to_currency request.amount
        %td= request.status
        %td= pluralize request.financing_time, 'month'
        %td= number_to_percentage(request.financing_rate, precision: 0)   
        %td= request.created_at.strftime('%e %b %Y %H:%M:%S')
        %td
          = link_to 'Ver', [@user, request]

%br

= link_to 'Nueva solicitud', new_user_request_path(@user)
