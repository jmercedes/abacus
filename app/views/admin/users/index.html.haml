#pad-wrapper.users-list
  .row.header
    %h3 Clientes
    .col-md-10.col-sm-12.col-xs-12.pull-right
      = link_to new_admin_user_path, :class => 'btn-flat success pull-right' do
        %span +
        Nuevo Cliente

  .table-wrapper.users-table
    .row-fluid
      %table.table.table-hover
        %thead
          %tr
            %th ID
            %th Nombre
            %th Correo Electrónico
            %th % Completado
            %th Acciones

        %tbody
          - @users.each do |user|
            %tr
              %td= user.id
              %td= user.name
              %td= user.email
              %td= user.profile.progress_status
              %td
                = link_to 'Ver', admin_user_path(user)
                = link_to 'Editar', edit_admin_user_path(user)
                = link_to 'Eliminar', admin_user_path(user), :method => :delete, :data => { :confirm => '¿Estas seguro?' }



