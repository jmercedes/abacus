#pad-wrapper.user-profile
  .row.header
    .col-md-8
      %h3.name
        Pr√©stamos
  - if @loans.present?

    .table-wrapper.users-table
      .row-fluid
        %table.table.table-hover
          %thead
            %tr
              %th ID
              %th Usuario
              %th Monto
              %th Estatus
              %th Tiempo
              %th Tasa
              %th Fecha

          %tbody
            - @loans.each do |loan|
              %tr
                %td= loan.id
                %td= loan.user.name
                %td= number_to_currency(loan.amount, delimeter: ',', unit: 'RD$', separator: '.', format: "%u %n")
                %td= loan.status
                %td= pluralize loan.financing_time, 'month'
                %td= number_to_percentage(loan.financing_rate, precision: 0)
                %td= loan.created_at.strftime('%e %b %Y %H:%M:%S')
                %td
                  - if @operation == 'closure'
                    = link_to 'Closure', new_admin_payment_path(loan_id: loan.id, operation: 'closure')
                  - else
                    = link_to 'Capital payment', new_admin_payment_path(loan_id: loan.id, operation: 'capital')
  - else
    %br
    %h3
      No approved loans