#pad-wrapper.user-profile
  .row.header
    .col-md-8
      /= image_tag 'contact-profile.png', class: 'img avatar img-circle'
      %h3.name
        = @loan.user.name
      %span.area= "ID pr√©stamo #{@loan.id} | #{number_to_currency(@loan.amount, unit: "$", format: "%u %n")} | #{@loan.emission_date}"
    /= link_to edit_profile_path, class: 'btn-flat icon large pull-right edit' do
    /  Editar perfil
    /  %span


#pad-wrapper.new-user
  .row.header
    .col-md-12
  .row.form-wrapper
    .col-md-9.with-sidebar
      - if @operation == 'closure'
        = render 'closure_form'
      - elsif @operation == 'capital'
        = render 'capital_form'
      - else
        = render 'form'

      = link_to 'Show', @admin_payment
      \|
      = link_to 'Back', admin_payments_path
