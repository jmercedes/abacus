%h1 Préstamo
%hr  
  %b Usuario:
  = @loan.user.name
  %br

  %b Monto:
  = number_to_currency(@loan.amount, unit: "$")
  %br

  %b Tasa de financiamiento:
  = number_to_percentage(@loan.financing_rate, precision: 0)   
  %br

  %b Fecha de emisión:
  = @loan.emision_date.strftime('%e %b %Y')
  %br

  %b Tiempo de financioamiento:
  = pluralize @loan.financing_time, 'month'
  %br

  %b Estatus:
  = @loan.status
  %br

  %b Fecha de creación:
  = @loan.created_at.strftime('%e %b %Y %H:%M:%S')
  %br


= link_to 'Editar', edit_admin_loan_path(@loan)
\|
= link_to 'Regresar', admin_loans_path
