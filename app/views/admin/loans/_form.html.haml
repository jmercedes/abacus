= simple_form_for [:admin, @loan], html: { class: 'form-vertical' }  do |f|
  
  = f.input :user_id, as: :select, collection: User.for_select, include_blank: 'Seleccionar usuario', label: "Cliente:"
  = f.input :status, as: :select, collection: Loan::Statuses, include_blank: false, label: "Estatus"
  = f.input :amount, input_html:  {value: f.object.amount || '5000'}, label: "Monto"
  %p 
    %strong Fecha de emisión 
  = f.input_field :emission_date, label: "Fecha de emisión"
  %br
  %br
  = f.input :financing_time, input_html:  {value: f.object.financing_time || '1'}, label: "Tiempo de financiamiento en meses"
  = f.input :financing_rate, input_html:  {value: f.object.financing_rate || Request::DefaultFinancingRate}, label: "Tasa anual"


    
  .actions
    = f.submit 'Crear', :class => 'btn-flat success btn-finish'