= simple_form_for [:admin, @loan], html: { class: 'form-vertical' }  do |f|
  
  = f.input :user_id, as: :select, collection: User.for_select, include_blank: 'Seleccionar usuario', label: "Usuario:"
  = f.input :status, as: :select, collection: Loan::Statuses, include_blank: false, label: "Estatus"
  = f.input :amount, input_html:  {value: f.object.amount || '1'}, label: "Monto"
  = f.input :emision_date, as: :date, label: "Fecha"
  = f.input :financing_time, input_html:  {value: f.object.financing_time || '1'}, label: "Tiempo"
  = f.input :financing_rate, input_html:  {value: f.object.financing_rate || Request::DefaultFinancingRate}, label: "Tasa"


    
  .actions
    = f.submit 'Guardar', :class => 'btn-flat success btn-finish'