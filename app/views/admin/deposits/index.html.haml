%h1 Depósitos



.table-wrapper.users-table.section
  .row-fluid
    %table.table.table-hover
      %thead
        %tr
          %th.span4
            ID Cuenta
          %th.span3
            %span.line>
            Monto
          %th.span3
            %span.line>
            Fecha de pago
          %th.span3
            %span.lin3>
            Acciones
      %tbody
        - @deposits.each do |deposit|
          %tr
            %td= deposit.account_id
            %td= number_to_currency(deposit.amount, precision: 2, separator: ".", unit: 'RD$', delimiter: ',')
            %td= deposit.created_at
            %td
              %ul.actions
                %li
                  = link_to 'ver', admin_deposit_path(deposit)
                  = link_to 'Editar', edit_admin_deposit_path(deposit)
                  = link_to 'Eliminar', admin_deposit_path(deposit), :method => :delete, :data => { :confirm => '¿Estas seguro?' }


%hr
= link_to 'Nuevo depósito', new_admin_deposit_path