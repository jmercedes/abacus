%h1 Solicitudes
%hr

.table-wrapper.users-table.section
  .row-fluid
    %table.table.table-hover
      %thead
        %tr
          %th ID
          %th Usuario
          %th Monto
          %th Estatus
          %th Tiempo
          %th Tasa
          %th Fecha
          %th Acciones

      %tbody
        - @requests.each do |request|
          %tr
            %td= request.id
            %td= request.user.name
            %td= number_to_currency(request.amount, delimeter: ',', unit: 'RD$', separator: '.') 
            %td= request.status
            %td= pluralize request.financing_time, 'month'
            %td= number_to_percentage(request.financing_rate, precision: 0)
            %td= request.created_at.strftime('%e %b %Y %H:%M:%S')
            %td
              = link_to 'Ver', admin_request_path(request)
              = link_to 'Editar', edit_admin_request_path(request)
              = link_to 'Eliminar', admin_request_path(request), :method => :delete, :data => { :confirm => 'Â¿Estas seguro?' }

%hr
= link_to 'Nueva solicitud', new_admin_request_path