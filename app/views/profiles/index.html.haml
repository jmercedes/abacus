= content_for :sidebar do
  = render 'shared/sidebar', user: :current_user, tab: 'profiles_index'


#main-stats
  .row.row-fluid.stats-row
    .span3.stat
      .data
        %span.number= "#{@completion_average}%"
        Perfiles
      %span.date Completados
    .span3.stat
      .data
        %span.number 3240
        Salario
      %span.date promedio
    .span3.stat
      .data
        %span.number 322
        orders
      %span.date This week
    .span3.stat.last
      .data
        %span.number $2,340
        sales
      %span.date last 30 days


#pad-wrapper
  / table sample
  / the script for the toggle all checkboxes from header is located in js/theme.js
  .table-products.section
    .row
    %table.table.table-hover
      %thead
        %tr
          %th.col-md-3
            Nombre
          %th.col-md-3
            %span.line>
            Completado
          %th.col-md-3
            %span.line>
            Estatus
      %tbody
        / row
        - @profiles.each do |profile|
          %tr
            %td
              = profile.names
            %td
              = "#{profile.progress_status}%"
            %td
              %span.label.label-success Procesado
              %ul.actions
                %li
                  = link_to '<i class="table-edit"></i>'.html_safe, edit_profile_path(profile)
                %li
                  = link_to '<i class="table-settings"></i>'.html_safe, edit_profile_path(profile)
                %li.last
                  %i.table-delete

          / row
    / %ul.pagination
    /   %li
    /     %a{:href => "#"} «
    /   %li.active
    /     %a{:href => "#"} 1
    /   %li
    /     %a{:href => "#"} 2
    /   %li
    /     %a{:href => "#"} 3
    /   %li
    /     %a{:href => "#"} 4
    /   %li
    /     %a{:href => "#"} »
  / end table sample