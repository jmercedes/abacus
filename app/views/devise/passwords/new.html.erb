<div class="header">
        <a href="/">
          <%= image_tag 'logo_crediclub.png' %>
        </a>
</div>

<div class="row-fluid login-wrapper">
    <div class="box">
        <div class="content-wrap">

<h6>¿Olvidaste tu contraseña?</h6>
<p>Digita tu correo electrónico para recibir las instrucciones para acceder a tu cuenta</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

	<%= f.email_field :email, autofocus: true, class: 'span12', placeholder: 'Correo Electrónico' %>
  <div><%= f.submit "Enviarme instrucciones", class: 'btn-flat success' %></div>
<% end %>

<%= render "devise/shared/links" %>
		</div>
	</div>
</div>