<div class="header">
        <a href="index.html">
          <%= image_tag 'logo_crediclub.png' %>
        </a>
</div>

<div class="row-fluid login-wrapper">
    <div class="box">
        <div class="content-wrap">
            <h6>Accede a tu cuenta</h6>
						
						<% if notice %>
						  <p class="alert alert-success"><%= notice %></p>
						<% end %>
						<% if alert %>
						  <p class="alert alert-danger"><%= alert %></p>
						<% end %>
			      	

						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            	<%= devise_error_messages! %>
							<%#= f.email_field :email, autofocus: true, placeholder: 'Correo Electrónico', class: 'span12' %>
							<%= f.email_field :email, autofocus: true, class: 'span12', placeholder: 'Correo Electrónico' %>
							<%= f.password_field :password, autocomplete: "off", class: 'span12', placeholder: 'Contraseña' %>
							
							
							<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
							  <%= link_to "¿Olvidaste la contrseña?", new_password_path(resource_name), :class => 'forgot' %><br />
							<% end -%>
							

						  <% if devise_mapping.rememberable? -%>

									<div class="remember">
					            <%= f.check_box :remember_me, :class => 'Remember-me' %>
											<%= f.label "Recordar", :class => 'Remember-me' %>
					        </div>

						  <% end -%> 
						
						<%= f.submit "Acceder", :class => 'btn-glow primary login' %>
						  
						<% end %>
        </div>
    </div>

    <div class="no-account">
        <p>¿No tienes una cuenta?</p>
				<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
				  <%= link_to "Crea tu cuenta", new_registration_path(resource_name) %><br />
				<% end -%>
				
        <!-- <a href="signup.html">Crea tu cuenta</a> -->
    </div>
</div>



<%#= render "devise/shared/links" %>
